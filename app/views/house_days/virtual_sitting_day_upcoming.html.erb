<% unless @house.upcoming_virtual_sitting_days.empty? %>
	<ol>
		<%= render :partial => 'virtual_sitting_day/virtual_sitting_day', :collection => @house.upcoming_virtual_sitting_days %>
	</ol>
<% else -%>
	<%= content_tag( 'p', "There are no upcoming virtual sitting days in the #{@house.name}." ) %>
<% end -%>