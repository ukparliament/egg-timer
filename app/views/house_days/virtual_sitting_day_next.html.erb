<% if @house.next_virtual_sitting_day -%>
	<%= content_tag( 'p', link_to( @house.next_virtual_sitting_day.label, calendar_day_url( :year => @house.next_virtual_sitting_day.start_date.year, :month => @house.next_virtual_sitting_day.start_date.month, :day => @house.next_virtual_sitting_day.start_date.day ) ) ) %>
<% else -%>
	<%= content_tag( 'p', "There are no upcoming virtual sitting days in the #{@house.name}." ) %>
<% end -%>