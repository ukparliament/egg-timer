<% if @house.latest_sitting_day -%>
	<%= content_tag( 'p', link_to( @house.latest_sitting_day.label, calendar_day_url( :year => @house.latest_sitting_day.start_date.strftime( '%Y' ), :month => @house.latest_sitting_day.start_date.strftime( '%m' ), :day => @house.latest_sitting_day.start_date.strftime( '%d') ) ) ) %>
<% else -%>
	<%= content_tag( 'p', "There are no preceding sitting days in the #{@house.name}." ) %>
<% end -%>