<!DOCTYPE html>
<html lang="en-gb">
	<head>
		<%= render :partial => 'library_design/head/head' %>
		<%= tag( 'base', :href => 'https://api.parliament.uk/egg-timer' )if Rails.env.production? %>
	</head>
	<body class="section-<%= @section %> subsection-<%= @subsection %> brand-bicameral">
		<%= render 'layouts/header/header' %>
		<main class="container block block-page" id="main-content">
			<div class="inner-content container">
				<div class="reading-width">
					<%= render 'library_design/debug/debug' -%>
					<%= render 'layouts/stale_warning' if @stale_data -%>
					<h1><%= @multiline_page_title || @page_title || $PRODUCT_TITLE %></h1>
					<%= yield %>
				</div>
			</div>
		</main>
		<%= render 'library_design/footer/fat_footer' %>
	</body>
</html>
